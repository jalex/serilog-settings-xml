<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>XML configuration file support for Serilog.</Description>
    <VersionPrefix>2.1.3</VersionPrefix>
    <Authors>Rail Sabirov</Authors>
    <TargetFramework>net45</TargetFramework>
    <AssemblyName>Serilog.Settings.Xml</AssemblyName>
    <AssemblyOriginatorKeyFile>../../assets/Serilog.snk</AssemblyOriginatorKeyFile>
    <SignAssembly>true</SignAssembly>
    <PublicSign Condition=" '$(OS)' != 'Windows_NT' ">true</PublicSign>
    <PackageId>Serilog.Settings.Xml</PackageId>
    <PackageTags>serilog;xml</PackageTags>
    <PackageIconUrl>http://serilog.net/images/serilog-configuration-nuget.png</PackageIconUrl>
    <PackageProjectUrl>http://serilog.net</PackageProjectUrl>
    <PackageLicenseUrl>http://www.apache.org/licenses/LICENSE-2.0</PackageLicenseUrl>
    <GenerateAssemblyVersionAttribute>false</GenerateAssemblyVersionAttribute>
    <FileVersion>0.0.0.1</FileVersion>
    <Version>0.0.1</Version>
    <Company>Rail Sabirov</Company>
    <PackageReleaseNotes>Initial pre-release.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Serilog" Version="2.3.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net45' ">
    <Reference Include="System.Configuration" />
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

</Project>
